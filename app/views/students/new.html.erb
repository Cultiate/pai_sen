<% provide(:title, "新規登録") %>

<%= form_for(@student, url: signup_path) do |f| %>
  <%= render 'shared/error_messages', model: @student %>
  <%= f.label :email, "メールアドレス" %>
  <%= f.email_field :email %>
  <%= f.label :password, "パスワード" %>
  <%= f.password_field :password, placeholder:"英数字8文字以上" %>
  <%= f.label :password_confirmation, "パスワード(確認)" %>
  <%= f.password_field :password_confirmation, placeholder:"英数字8文字以上" %>
<%= f.submit "登録する" %>
<% end %>
