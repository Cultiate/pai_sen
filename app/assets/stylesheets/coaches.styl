lightgray = rgba(0,0,0,.05)
primary = #67c5ca
orange = #f5a04e

#mypage_coach
  margin 5%

  .title
    margin-bottom 5%

  .subtitle
    margin 10% 0 5%

  .sidebar
    width 25%
    margin 0 2.5% 5%
    max-width 30%
    background-color rgba(0,0,0,.05)
    float left

    .user-profile
      margin 3% 10% 20%

      .mr--8
        margin-right -8%

      .border.text-orange
        border-color orange !important
        font-size 10px
        &:hover
          color orange

      .user-icon
        width 80%
        margin-bottom 10%
        border-radius 50%
      
      .detail-profile
        margin-top 5%
        text-align left
      
      p
        margin 0 10%

  .mainbar
    width 50%
    margin 0 5%
    max-width 60%
    float left
    text-align left

    .profile-edit
      width 100%

#review_coach
  .reviews
    width 60%
    margin auto
    margin-top 5%

    .review
      .progress-bar
        background-color orange

    ul
      list-style none
  
  .detail-reviews
    margin-top 5%
    .detail-review
      width 90%
      margin 5% 0
      .reviewer-img
        width 20%
        .user-icon
          width 40%
          margin-bottom 10%
          border-radius 50%
      .reviewer-text
        width 80%
        text-align left
        .border
          border-width 2px !important
          border-color orange !important
  
#reservation_coach
  width 80%
  margin auto
  text-align center

  .reservations 
    text-align left

    .card
      margin 5% 0 
      border none
      background-color lightgray

      .card-header
        border-bottom none 
      .show
        background-color lightgray !important
        .card-body
          .tag
            margin 0 2%
            color primary 

    a
      width auto
      &[aria-expanded="false"]:after
        content url("/icons/plus.png")
        margin-top 3%
        margin-left 90%
      &[aria-expanded="true"]:after 
        content url("/icons/minus.png")
        margin-top 3%
        margin-left 90%    

    .reservation
      .user-icon
        margin-bottom 0
      .reserver-icon
        width 10%
        margin-right 5%
      .reserver-info
        width 70%