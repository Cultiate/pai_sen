orange = #f5a04e

#mypage_coach
  margin 5%

  .title
    margin-bottom 5%

  .subtitle
    margin 10% 0 5%

  .sidebar
    width 25%
    margin 0 2.5% 5%
    max-width 30%
    background-color rgba(0,0,0,.05)
    float left

    .user-profile
      margin 3% 10% 20%

      .mr--8
        margin-right -8%

      .border.text-orange
        border-color orange !important
        font-size 10px
        &:hover
          color orange

      .user-icon
        width 80%
        margin-bottom 10%
        border-radius 50%
      
      .detail-profile
        margin-top 5%
        text-align left
      
      p
        margin 0 10%

  .mainbar
    width 50%
    margin 0 5%
    max-width 60%
    float left
    text-align left

    .profile-edit
      width 100%

#review_coach
  .reviews
    width 60%
    margin auto
    margin-top 5%

    .review
      .progress-bar
        background-color orange

    ul
      list-style none
  
  .detail-reviews
    margin-top 5%
    .detail-review
      width 90%
      margin 5% 0
      .reviewer-img
        width 20%
        .user-icon
          width 40%
          margin-bottom 10%
          border-radius 50%
      .reviewer-text
        width 80%
        text-align left
        .border
          border-width 2px !important
          border-color orange !important
  